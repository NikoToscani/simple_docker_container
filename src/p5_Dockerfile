FROM ubuntu/nginx

WORKDIR /home

COPY ./server/hello.c /home
COPY ./nginx/nginx.conf /etc/nginx/

RUN useradd -d /home -s /bin/bash user1; \
    chown -R user1:user1 /var/lib/nginx/ /var/run/ /var/log/nginx/; \
    apt-get update -y && apt-get upgrade -y && apt-get install -y gcc libfcgi-dev spawn-fcgi; \
    gcc -Wall -Werror -Wextra -std=c11 hello.c -lfcgi; \
    chmod u-s /usr/bin/su; \
    chmod u-s /usr/bin/newgrp; \
    chmod u-s /usr/bin/chfn; \
    chmod u-s /usr/bin/gpasswd; \
    chmod u-s /usr/bin/mount; \
    chmod u-s /usr/bin/umount; \
    chmod u-s /usr/bin/passwd; \
    chmod u-s /usr/bin/chsh; \
    chmod g-s /usr/bin/chage; \
    chmod g-s /usr/sbin/pam_extrausers_chkpwd; \
    chmod g-s /usr/sbin/unix_chkpwd; \
    chmod g-s /usr/bin/expiry; \
    chmod g-s /usr/bin/wall; \
    rm -rf /var/lib/apt/lists

USER user1

HEALTHCHECK --interval=5m --timeout=3s \
    CMD curl -f http://localhost/ || exit 1

ENTRYPOINT [ "/bin/bash", "-c", "nginx -g 'daemon off;' | spawn-fcgi -p 8080 a.out" ]